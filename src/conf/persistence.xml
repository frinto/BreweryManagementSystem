<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BreweryManagementSystemPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>domainmodel.Purchaseorder</class>
    <class>domainmodel.Role</class>
    <class>domainmodel.Finishedproduct</class>
    <class>domainmodel.Sv</class>
    <class>domainmodel.Brewmaterials</class>
    <class>domainmodel.Brand</class>
    <class>domainmodel.Delivery</class>
    <class>domainmodel.Productionmaterial</class>
    <class>domainmodel.Productionmaterialusage</class>
    <class>domainmodel.Recipe</class>
    <class>domainmodel.Employee</class>
    <class>domainmodel.Brew</class>
    <class>domainmodel.Fv</class>
    <class>domainmodel.Account</class>
    <class>domainmodel.Productionschedule</class>
    <class>domainmodel.Transfer</class>
    <class>domainmodel.Supplier</class>
    <class>domainmodel.Production</class>
    <class>domainmodel.Product</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/brewery?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
    </properties>
  </persistence-unit>
</persistence>